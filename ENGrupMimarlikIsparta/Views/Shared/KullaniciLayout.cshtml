
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anasayfa | E&N Mimarlık</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/ENMimarlik/style.css" />

    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />


</head>
<body>
    @*BURAYA RENK KODU EKLENECEK*@

    <div class="navbar">
        <div>
            <a style="text-decoration:none" href="/Admin/AdminIndex/">
                @Html.Action("FirmaLogosu_SolKose", "Sayfalar")
                <span style="font-weight:bold; color:white; font-size:20px;">
                    E & N GRUP MİMARLIK
                </span>
            </a>
        </div>


        <div style="margin:27px 80px">
            <a class="navbar-menu" href="/Sayfalar/Anasayfa/">Anasayfa</a>
            <a class="navbar-menu" href="/Sayfalar/Hakkimizda/">Hakkımızda</a>
            <a class="navbar-menu" href="/Sayfalar/NelerYapiyoruz/">Neler Yapıyoruz?</a>
            <a class="navbar-menu" href="/Sayfalar/Projelerimiz/">Projelerimiz</a>
            <a class="navbar-menu" href="/Sayfalar/Iletisim/">İletişim</a>
        </div>

        <div style="margin-left:100px; margin-top:5px">
            @Html.Action("SosyalMedyaPartial", "Sayfalar")
            <a class="bi bi-person-circle" style="font-size: 45px; color: darkslategray; margin-left:80px; text-decoration:none" href="/Login/LoginIndex">
            </a>
        </div>
    </div>



    @RenderBody()

    <!--! BOTTOM İNFO-->


    <div class="bottom-info">
        <ul class="bottom-ul">
            İletişim Bilgileri
            @Html.Action("IletisimBilgileri_Footer", "Sayfalar")
        </ul>

        <ul class="bottom-ul">
            Hizmetlerimiz
            @Html.Action("HizmetBilgileri_Footer", "Sayfalar")

        </ul>
    </div>
</body>
</html>


<style>
    .navbar-menu {
        margin-left: 25px;
        color: white;
        text-decoration: none;
        font-size: 20px;
        transition: all 0.5s;
    }

        .navbar-menu:hover {
            text-decoration: none;
            font-weight: bold;
            transform: scale(1.2);
            font-size: 25px;
            color: white;
            text-decoration: none;
        }
</style>
